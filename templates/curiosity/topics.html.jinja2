{% extends "base.html.jinja2" %}
{% block content %}
<div class="row">
  <div class="col-sm">
  <h4>{{ n }} Dialogs with topic "{{ topic }}"</h4>
   <table class="table table-striped table-hover">
          <thead class="thead-dark">
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Topic</th>
              <th scope="col">Aspect 1</th>
              <th scope="col">Aspect 2</th>
              <th scope="col">URL</th>
            </tr>
          </thead>
          <tbody>
            {% for d in dialogs %}
            <tr>
              <td>{{ d.dialog_id }}</td>
              <td>{{ d.topic }}</td>
              <td>{{ d.aspect_1}}</td>
              <td>{{ d.aspect_2}}</td>
              <td><a href="{{ d.url }}">{{ d.url }}</a></td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
  </div>
</div>
{% endblock %}
